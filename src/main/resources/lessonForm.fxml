<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ComboBox?>

<AnchorPane fx:id="lessonForm" prefHeight="630.0" prefWidth="770.0"
            style="-fx-background-color: linear-gradient(to bottom, #94ddf3, #FFFFFF);"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.LessonFormController">

    <HBox layoutX="520.0" layoutY="46.0" spacing="10.0">
        <children>

            <TextField fx:id="txtSearch" promptText="Enter name or ID"
                       onKeyReleased="#txtSearchKeyReleased" prefWidth="200.0"/>
        </children>
    </HBox>

    <!-- Header -->
    <Label layoutX="113.0" layoutY="46.0" text="Lesson Manage" style="-fx-font-weight: bold;">
        <font>
            <Font name="DejaVu Serif Condensed Bold" size="30.0"/>
        </font>
    </Label>
    <ImageView fitHeight="48.0" fitWidth="48.0" layoutX="45.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@asset/icon/lesson.png"/>
        </image>
    </ImageView>

    <!-- Input Fields -->
    <VBox layoutX="57.0" layoutY="120.0" spacing="15.0">
        <children>
            <!-- Lesson ID and Lesson Date -->
            <HBox spacing="10.0">
                <children>
                    <Label text="Lesson ID :" prefWidth="100.0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtLessonId" prefWidth="200.0" editable="false"/>
                    <Label text="Lesson Date :" prefWidth="130.0" style="-fx-font-weight: bold;"/>
                    <DatePicker fx:id="dateLesson"/>
                </children>
            </HBox>

            <!-- Student -->
            <HBox spacing="10.0">
                <children>
                    <Label text="Student :" prefWidth="100.0" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cmbStudent" prefWidth="200.0"/>
                </children>
            </HBox>

            <!-- Course -->
            <HBox spacing="10.0">
                <children>
                    <Label text="Course :" prefWidth="100.0" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cmbCourse" prefWidth="200.0"/>
                </children>
            </HBox>

            <!-- Instructor -->
            <HBox spacing="10.0">
                <children>
                    <Label text="Instructor :" prefWidth="100.0" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="cmbInstructor" prefWidth="200.0"/>
                </children>
            </HBox>

            <!-- Time -->
            <HBox spacing="10.0">
                <children>
                    <Label text="Time :" prefWidth="100.0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtTime" promptText="HH:mm:ss" prefWidth="200.0"/>
                </children>
            </HBox>

            <!-- Duration (moved below Lesson Date) -->
            <HBox spacing="10.0">
                <children>
                    <Label text="Duration :" prefWidth="100.0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtDuration" promptText="Minutes (e.g. 90)" prefWidth="200.0"/>
                </children>
            </HBox>
        </children>
    </VBox>

    <!-- Buttons -->
    <HBox layoutX="207.0" layoutY="370.0" spacing="20.0">
        <children>
            <JFXButton onAction="#btnSaveOnAction" prefHeight="35.0" prefWidth="110.0"
                       style="-fx-background-color: #228B22;" text="ðŸ’¾ Save" textFill="WHITE">
                <font>
                    <Font name="DejaVu Serif Bold" size="15.0"/>
                </font>
            </JFXButton>

            <JFXButton onAction="#btnDeleteOnAction" prefHeight="35.0" prefWidth="110.0"
                       style="-fx-background-color: #E41B17;" text="ðŸ—‘ï¸ Delete" textFill="WHITE">
                <font>
                    <Font name="DejaVu Serif Bold" size="15.0"/>
                </font>
            </JFXButton>

            <JFXButton onAction="#btnUpdateOnAction" prefHeight="35.0" prefWidth="110.0"
                       style="-fx-background-color: #1F45FC;" text="âœï¸ Update" textFill="WHITE">
                <font>
                    <Font name="DejaVu Serif Bold" size="15.0"/>
                </font>
            </JFXButton>

            <JFXButton onAction="#btnClearOnAction" prefHeight="35.0" prefWidth="110.0"
                       style="-fx-background-color: #808080;" text="ðŸ§¹ Clear" textFill="WHITE">
                <font>
                    <Font name="DejaVu Serif Bold" size="15.0"/>
                </font>
            </JFXButton>
        </children>
    </HBox>

    <!-- Table -->
    <TableView fx:id="tblLesson" layoutX="57.0" layoutY="420.0"
               onMouseClicked="#tblLessonOnClickAction"
               prefHeight="180.0" prefWidth="700.0">
        <columns>
            <TableColumn fx:id="colLessonId" text="Lesson ID" prefWidth="100.0"/>
            <TableColumn fx:id="colStudent" text="Student" prefWidth="120.0"/>
            <TableColumn fx:id="colCourse" text="Course" prefWidth="120.0"/>
            <TableColumn fx:id="colInstructor" text="Instructor" prefWidth="120.0"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="100.0"/>
            <TableColumn fx:id="colTime" text="Time" prefWidth="80.0"/>
            <TableColumn fx:id="colDuration" text="Duration" prefWidth="100.0"/>
        </columns>
    </TableView>

</AnchorPane>

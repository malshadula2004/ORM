<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="instructorForm" prefHeight="630.0" prefWidth="770.0"
            style="-fx-background-color: linear-gradient(to bottom, #94ddf3, #FFFFFF);"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.InstructorFormController">

    <HBox layoutX="520.0" layoutY="46.0" spacing="10.0">
        <children>

            <TextField fx:id="txtSearch" promptText="Enter name or ID"
                       onKeyReleased="#txtSearchKeyReleased" prefWidth="200.0"/>
        </children>
    </HBox>

    <!-- Title -->
    <Label layoutX="113.0" layoutY="46.0" text="Instructor Manage" style="-fx-font-weight: bold;">
        <font>
            <Font name="DejaVu Serif Condensed Bold" size="30.0"/>
        </font>
    </Label>

    <!-- Icon -->
    <ImageView fitHeight="48.0" fitWidth="48.0" layoutX="45.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@asset/icon/online-learning.png"/>
        </image>
    </ImageView>

    <!-- Input Fields -->
    <Label layoutX="57.0" layoutY="142.0" text="ID :" style="-fx-font-weight: bold;"/>
    <TextField fx:id="txtInstructorId" layoutX="128.0" layoutY="138.0" />

    <Label layoutX="57.0" layoutY="199.0" text="Name :" style="-fx-font-weight: bold;"/>
    <TextField fx:id="txtName" layoutX="128.0" layoutY="195.0" />

    <Label layoutX="57.0" layoutY="252.0" text="Specialization :" style="-fx-font-weight: bold;"/>
    <TextField fx:id="txtSpecialization" layoutX="150.0" layoutY="248.0" prefWidth="138.0"/>

    <!-- Table shifted 1cm up -->
    <TableView fx:id="tblInstructor" layoutX="57.0" layoutY="400.0" prefHeight="200.0" prefWidth="656.0" onMouseClicked="#tblInstructorOnClickAction">
        <columns>
            <TableColumn fx:id="colId" prefWidth="120.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="colSpecialization" prefWidth="200.0" text="Specialization" />
        </columns>
    </TableView>

    <!-- Buttons in HBox, shifted 1cm down -->
    <HBox layoutX="207.0" layoutY="334.0" spacing="20.0">
        <children>
            <JFXButton onAction="#btnSaveOnAction" prefHeight="35.0" prefWidth="110.0"
                       style="-fx-background-color: #228B22;" text="💾 Save" textFill="WHITE">
                <font>
                    <Font name="DejaVu Serif Bold" size="15.0"/>
                </font>
            </JFXButton>

            <JFXButton onAction="#btnDeleteOnAction" prefHeight="35.0" prefWidth="110.0"
                       style="-fx-background-color: #E41B17;" text="🗑️ Delete" textFill="WHITE">
                <font>
                    <Font name="DejaVu Serif Bold" size="15.0"/>
                </font>
            </JFXButton>

            <JFXButton onAction="#btnUpdateOnAction" prefHeight="35.0" prefWidth="110.0"
                       style="-fx-background-color: #1F45FC;" text="✏️ Update" textFill="WHITE">
                <font>
                    <Font name="DejaVu Serif Bold" size="15.0"/>
                </font>
            </JFXButton>

            <JFXButton onAction="#btnClearOnAction" prefHeight="35.0" prefWidth="110.0"
                       style="-fx-background-color: #808080;" text="🧹 Clear" textFill="WHITE">
                <font>
                    <Font name="DejaVu Serif Bold" size="15.0"/>
                </font>
            </JFXButton>
        </children>
    </HBox>

</AnchorPane>

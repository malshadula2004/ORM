<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="630.0" prefWidth="770.0"
            style="-fx-background-color: linear-gradient(to bottom, #94ddf3, #FFFFFF);"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.CourseFormController">


   <HBox layoutX="520.0" layoutY="46.0" spacing="10.0">
      <children>

         <TextField fx:id="txtSearch" promptText="Enter name or ID"
                    onKeyReleased="#txtSearchKeyReleased" prefWidth="200.0"/>
      </children>
   </HBox>
   <!-- Title -->
   <Label layoutX="113.0" layoutY="46.0" text="Course Manage">
      <font>
         <Font name="DejaVu Serif Condensed Bold" size="30.0"/>
      </font>
   </Label>

   <!-- Icon -->
   <ImageView fitHeight="48.0" fitWidth="48.0" layoutX="45.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@asset/icon/driving-lessons.png"/>
      </image>
   </ImageView>

   <!-- ID Field -->
   <TextField fx:id="txtId" layoutX="162.0" layoutY="157.0" editable="false"
              onAction="#txtIdOnAction" onKeyReleased="#txtIdKeyAction"/>
   <Label layoutX="83.0" layoutY="161.0" text="ID :">
      <font>
         <Font name="DejaVu Sans Condensed Bold" size="13.0"/>
      </font>
   </Label>

   <!-- Program Name -->
   <TextField fx:id="txtName" layoutX="503.0" layoutY="157.0"
              onAction="#txtNameOnAction" onKeyReleased="#txtNameKeyAction"/>
   <Label layoutX="432.0" layoutY="161.0" text="Name :">
      <font>
         <Font name="DejaVu Sans Condensed Bold" size="13.0"/>
      </font>
   </Label>

   <!-- Duration -->
   <TextField fx:id="txtDuration" layoutX="162.0" layoutY="217.0"
              onAction="#txtDurationOnAction" onKeyReleased="#txtDurationKeyAction"/>
   <Label layoutX="83.0" layoutY="221.0" text="Duration :">
      <font>
         <Font name="DejaVu Sans Condensed Bold" size="13.0"/>
      </font>
   </Label>
   <Label layoutX="86.0" layoutY="240.0" text="(Months)">
      <font>
         <Font name="DejaVu Sans Condensed Bold" size="11.0"/>
      </font>
   </Label>

   <!-- Fee -->
   <TextField fx:id="txtFee" layoutX="503.0" layoutY="217.0" onKeyReleased="#txtFeeKeyAction"/>
   <Label layoutX="432.0" layoutY="221.0" text="Fee :">
      <font>
         <Font name="DejaVu Sans Condensed Bold" size="13.0"/>
      </font>
   </Label>
   <Label layoutX="430.0" layoutY="238.0" text="(LKR)">
      <font>
         <Font name="DejaVu Sans Condensed Bold" size="11.0"/>
      </font>
   </Label>

   <!-- Buttons with icons, shifted 1cm down -->
   <HBox layoutX="207.0" layoutY="305.0" spacing="20.0">
      <children>
         <JFXButton onAction="#btnSaveOnAction" prefHeight="35.0" prefWidth="110.0"
                    style="-fx-background-color: #228B22;" text="ðŸ’¾ Save" textFill="WHITE">
            <font>
               <Font name="DejaVu Serif Bold" size="15.0"/>
            </font>
         </JFXButton>

         <JFXButton onAction="#btnDeleteOnAction" prefHeight="35.0" prefWidth="110.0"
                    style="-fx-background-color: #E41B17;" text="ðŸ—‘ï¸ Delete" textFill="WHITE">
            <font>
               <Font name="DejaVu Serif Bold" size="15.0"/>
            </font>
         </JFXButton>

         <JFXButton onAction="#btnUpdateOnAction" prefHeight="35.0" prefWidth="110.0"
                    style="-fx-background-color: #1F45FC;" text="âœï¸ Update" textFill="WHITE">
            <font>
               <Font name="DejaVu Serif Bold" size="15.0"/>
            </font>
         </JFXButton>

         <JFXButton onAction="#btnClearOnAction" prefHeight="35.0" prefWidth="110.0"
                    style="-fx-background-color: #808080;" text="ðŸ§¹ Clear" textFill="WHITE">
            <font>
               <Font name="DejaVu Serif Bold" size="15.0"/>
            </font>
         </JFXButton>
      </children>
   </HBox>

   <!-- TableView, shifted 1cm up -->
   <TableView fx:id="tblProgram" layoutX="87.0" layoutY="372.0"
              onMouseClicked="#tblProgramOnClickAction" prefHeight="200.0" prefWidth="594.0">
      <columns>
         <TableColumn fx:id="colId" prefWidth="128.0" text="ID"/>
         <TableColumn fx:id="colProgramName" prefWidth="178.0" text="Program Name"/>
         <TableColumn fx:id="colDuration" prefWidth="153.0" text="Duration"/>
         <TableColumn fx:id="colFee" prefWidth="134.0" text="Fee(LKR)"/>
      </columns>
   </TableView>

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.controller.PaymentTableFormController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <TableView fx:id="tblPayments" layoutX="20" layoutY="20" prefWidth="560" prefHeight="360" editable="true">
            <columns>
                <TableColumn fx:id="colPaymentId" text="Payment ID" prefWidth="100"/>
                <TableColumn fx:id="colStudent" text="Student" prefWidth="120"/>
                <TableColumn fx:id="colProgram" text="Program" prefWidth="120"/>
                <TableColumn fx:id="colAmount" text="Amount" prefWidth="80"/>
                <TableColumn fx:id="colDate" text="Date" prefWidth="100"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>

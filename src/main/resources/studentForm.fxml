<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="studentForm" prefHeight="630.0" prefWidth="770.0"
            style="-fx-background-color: #FFE5B4;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.StudentFormController">

   <children>
      <!-- Header -->
      <HBox layoutX="40.0" layoutY="30.0" spacing="15.0">
         <children>
            <ImageView fitHeight="48.0" fitWidth="48.0"
                       pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@asset/icon/icons8-student-48.png"/>
               </image>
            </ImageView>
            <Label text="Student Manage">
               <font>
                  <Font name="DejaVu Serif Condensed Bold" size="30.0"/>
               </font>
            </Label>
         </children>
      </HBox>

      <!-- Input Fields -->
      <VBox layoutX="57.0" layoutY="120.0" spacing="15.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label text="ID :" prefWidth="100.0"/>
                  <TextField fx:id="txtId" onAction="#txtIdOnAction" onKeyReleased="#txtIdKeyAction"
                             prefWidth="200.0"/>
                  <Label text="Registation Date :" prefWidth="130.0"/>
                  <DatePicker fx:id="registerDatePicker"/>
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <Label text="Name :" prefWidth="100.0"/>
                  <TextField fx:id="txtName" onAction="#txtNameOnAction" onKeyReleased="#txtNameKeyAction"
                             prefWidth="200.0"/>
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <Label text="Address :" prefWidth="100.0"/>
                  <TextField fx:id="txtAddress" onAction="#txtAddressOnAction"
                             onKeyReleased="#txtAddressKeyAction" prefWidth="200.0"/>
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <Label text="Tel :" prefWidth="100.0"/>
                  <TextField fx:id="txtTel" onKeyReleased="#txtTelKeyAction" prefWidth="200.0"/>
               </children>
            </HBox>
         </children>
      </VBox>

      <!-- Buttons -->
      <HBox layoutX="320.0" layoutY="360.0" spacing="20.0">
         <children>
            <JFXButton text="Clear" fx:id="btnClear" onAction="#btnClearOnAction"
                       prefWidth="85.0" style="-fx-background-color: #808080;" textFill="WHITE"/>
            <JFXButton text="Update" fx:id="btnUpdate" onAction="#btnUpdateOnAction"
                       prefWidth="85.0" style="-fx-background-color: #1F45FC;" textFill="WHITE"/>
            <JFXButton text="Delete" fx:id="btnDelete" onAction="#btnDeleteOnAction"
                       prefWidth="85.0" style="-fx-background-color: #E41B17;" textFill="WHITE"/>
            <JFXButton text="Save" fx:id="btnSave" onAction="#btnSaveOnAction"
                       prefWidth="85.0" style="-fx-background-color: #228B22;" textFill="WHITE"/>
         </children>
      </HBox>

      <!-- Table -->
      <TableView fx:id="tblStudent" layoutX="57.0" layoutY="420.0"
                 onMouseClicked="#tblStudentOnClickAction"
                 prefHeight="180.0" prefWidth="656.0">
         <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="100.0"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="150.0"/>
            <TableColumn fx:id="colAddress" text="Address" prefWidth="200.0"/>
            <TableColumn fx:id="colTel" text="Tel" prefWidth="100.0"/>
            <TableColumn fx:id="colRegisterDate" text="Register Date" prefWidth="120.0"/>
         </columns>
      </TableView>
   </children>
</AnchorPane>
